    <select id="getByLoginName" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from sys_user where login_name = #{loginName, jdbcType=VARCHAR} and tenant_id = #{tenantId, jdbcType=BIGINT}
